{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noConstAssign": "error"
			}
		},
		"ignore": [
			"**/node_modules/**",
			"**/dist/**"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"quoteStyle": "single",
			"quoteProperties": "preserve",
			"trailingComma": "all"
		}
	}
}
